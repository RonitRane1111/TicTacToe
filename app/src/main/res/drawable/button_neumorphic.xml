<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF"/>
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#10FFFFFF" />

            <!-- Neumorphic shadow -->
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>